# 复制本文件为 backend/.env.local，并填写真实密钥
# cp backend/.env.local.example backend/.env.local

APP_ENV=dev
DOUBAO_MODE=real

# Ark / 豆包配置
ARK_API_KEY=your_ark_api_key_here
DOUBAO_API_KEY=your_ark_api_key_here
DOUBAO_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_MODEL=doubao-seed-2-0-mini-260215
DOUBAO_VISION_MODEL=doubao-seed-2-0-mini-260215
DOUBAO_STRUCT_MODEL=doubao-seed-2-0-mini-260215
DOUBAO_PRO_MODEL=doubao-seed-2-0-pro-260215
# 留空则默认走 DOUBAO_PRO_MODEL（用于成分解释/一致性/重合检测）
DOUBAO_ADVANCED_TEXT_MODEL=
DOUBAO_TIMEOUT_SECONDS=60
DOUBAO_ARTIFACT_TTL_DAYS=14

# 成本估算（元/百万tokens）
# pro: input=3.2 output=16 cache_hit=0.64
# lite: input=0.6 output=3.6 cache_hit=0.12
# mini: input=0.2 output=2.0 cache_hit=0.04
AI_MODEL_PRICING_PER_MTOKEN_JSON={"doubao-seed-2-0-pro-260215":{"input":3.2,"output":16,"cache_hit":0.64},"doubao-seed-2-0-lite-260215":{"input":0.6,"output":3.6,"cache_hit":0.12},"doubao-seed-2-0-mini-260215":{"input":0.2,"output":2.0,"cache_hit":0.04}
